<div id="calendar-modal<%= "#{assignment.id}" %>" class="modal hide fade" style="text-align: left !important;">
  <%= form_for assignment, method: :patch do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3><%= assignment.name %></h3>
    </div>
    <div class="modal-body">
      <div>
        <span class="field-label"><%= f.label :active_at, "Start" %></span>
        <div class="input-prepend"><%= f.text_field :active_at, class: "edit-date-time" %></div>
      </div>
      <div>
        <span class="field-label"><%= f.label :due_at, "Due" %></span>
        <div class="input-prepend"><%= f.text_field :due_at, class: "edit-date-time" %></div>
      </div>
    </div>
    <div class="modal-footer">
      <%= submit_tag "Update Assignment", class: "btn btn-success" %>
      <a class="btn" data-dismiss="modal">Close</a>
    </div>
  <% end %>
</div>
